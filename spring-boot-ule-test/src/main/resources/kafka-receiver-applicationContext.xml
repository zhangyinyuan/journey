			<util:list>
				<value>pcs.settlementNotice</value>
			</util:list>
		</property>
	</bean>
	
	<bean id="kafkaClientsConfig" class="com.yuan.ngu.spring.boot.ule.test.kafka.KafkaClientsConfigFactoryBean">
		<property name="configLocation" value="classpath:kafka-clients-cfg.xml" />
	</bean>

	

