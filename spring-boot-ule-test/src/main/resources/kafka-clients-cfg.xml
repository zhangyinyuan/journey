<?xml version="1.0" encoding="UTF-8"?>
<kafka-clients>
    <consumer>
        <id>pcs.settlementNotice</id>
        <topic>KAFKA_PCS_INVOICE_INFO_COMPLETE</topic>
        <handler.class>com.ule.invoice.kafka.ReceiveKafakImpl</handler.class>
        <group.id>INVOICE_INFO_COMPLETE</group.id>
        <zookeeper.connect>172.25.201.69:2181,172.25.201.70:2181,172.25.201.71:2181</zookeeper.connect>
        <auto.commit.enable>true</auto.commit.enable>
        <auto.commit.interval.ms>1000</auto.commit.interval.ms>
        <num.consumer.fetchers>4</num.consumer.fetchers>
        <auto.offset.reset>smallest</auto.offset.reset>
    </consumer>

    <!--开票成功回执-->
    <producer>
        <id>PCS.INVOICE_TO_ORDER</id>
        <topic>KAFKA_PCS_INVOICE_INFO_COMPLETE</topic>
        <kafka.broker.list>172.25.201.69:9092,172.25.201.70:9092,172.25.201.71:9092</kafka.broker.list>
        <request.required.acks>1</request.required.acks>
        <send.async.enable>false</send.async.enable>
    </producer>

    <!--发票创建完毕回执-->
    <producer>
        <id>CREATE_INVOICE_DONE_ACK</id>
        <topic>KAFKA_INVOICE_SIGN_FOR_CREATE_ACK</topic>
        <kafka.broker.list>172.25.201.54:9092,172.25.201.55:9092,172.25.201.56:9092</kafka.broker.list>
        <request.required.acks>1</request.required.acks>
        <send.async.enable>false</send.async.enable>
    </producer>

    <producer>
        <id>producer-OrderStatus-monitor</id>
        <topic>KAFKA_PCS_MONITOR_ORDER_STATUS</topic>
        <kafka.broker.list>172.25.201.69:9092,172.25.201.70:9092,172.25.201.71:9092</kafka.broker.list>
        <handler.class></handler.class>
        <request.required.acks>1</request.required.acks>
        <send.async.enable>false</send.async.enable>
        <ext.props>
        </ext.props>
    </producer>
</kafka-clients>